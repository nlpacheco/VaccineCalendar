<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaccineCalendar.Views.VaccineListViewPage"
             xmlns:vm="clr-namespace:VaccineCalendar.ViewModels"
             x:Name="VaccinePage"
             Title="{Binding Title}">
    <ContentPage.Resources>
        <StyleSheet Source="/Vaccine.css" />
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="VaccineListView" 
                ItemsSource="{Binding Vaccines}"
                VerticalOptions="FillAndExpand"
                HasUnevenRows="true"
                RefreshCommand="{Binding LoadItemsCommand}"
                IsPullToRefreshEnabled="true"
                IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                CachingStrategy="RecycleElement"
                ItemSelected="OnItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="3">
                                <Label Text="{Binding Name}" 
                                   LineBreakMode="NoWrap" 
                                   StyleClass="vaccineName" />
                                <!--<Label Text="{Binding Description}" 
                                   LineBreakMode="WordWrap"
                                   Style="{DynamicResource ListItemDetailTextStyle}"
                                   FontSize="Micro" />-->
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
